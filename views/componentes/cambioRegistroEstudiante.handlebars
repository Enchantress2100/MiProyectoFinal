<body>
<div class="container confirmar bg-dark" style="width:900px;">
  <div class="row">
    <div class="col">
<h2>Eliminaci√≥n</h2>
<form action="/eliminarRegistro">
{{#each borrar}}
  <div>
    <label for="rut">Rut</label>
    <input name="rut" type="text" value="{{this.rut}}"/>
  </div>
</form>
{{/each}}
<button onclick="confirmaEliminar()" class="btn btn-primary ms-4"><a href="/confirmarEliminacion" style="color:white ; text-decoration:none;">Confirmar</a></button>
    </div>
    <div class="col">
<h3>Confirmar cambio de registro</h3>
<form action="/eliminarRegistro">
{{#each cambios}}
  <div>
    <label for="rut">Rut</label>
    <input name="rut" type="text" value="{{this.rut}}"/>
  </div>
{{/each}}
</form>
<button onclick="confirmarCambio()" class="btn btn-primary ms-4"><a href="/confirmarCambios" style="color:white ; text-decoration:none">Confirmar<a></button>
    </div>
  </div>
</div>

<script>
   function confirmaEliminar(){
        alert('Los registros solicitados han sido borrados')
        }

   function confirmarCambio(){
        alert('Las modificaciones han sido confirmadas')
        }

</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
